<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/achievements_background"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:weightSum="13">

        <Button
            android:id="@+id/backfromshop"
            android:text="@string/back_to_menu"
            android:layout_width="wrap_content"
            android:textSize="@dimen/main_menu_font_size"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/achievement_banner"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/header_font_size"
            android:gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:text="@string/achievement_instructions"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/main_menu_font_size"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView1"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView2"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView3"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/rel2"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView4"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView5"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView6"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/rel3"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView7"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView8"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView9"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView10"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:onClick="onClick"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView11"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/achievementView12"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:layout_gravity="end"/>

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_forward_white_24dp"
                android:id="@+id/nextpagebutton"
                android:onClick="onClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/page_number"
                android:textSize="@dimen/main_menu_font_size"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back_white_24dp"
                android:id="@+id/preivouspagebutton"
                android:onClick="onClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>